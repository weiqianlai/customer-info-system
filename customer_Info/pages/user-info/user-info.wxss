page{
  background-color: #F5FFE8;
}
.main-box {
  width: 100%;
  height: 100%;
}

.user-info {
  width: 100%;
  height: 150rpx;
  padding-top: 50rpx;
  background: #D3FF93;
}

.user-name {
  width: 100%;
  text-align: center;
}

.grade {
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
  font-size: 20rpx;
}

.li {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  width: 92%;
  padding: 0 4%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
}

.bg-gray {
  font-size: 26rpx;
  width: 90%;
  text-align: center;
  margin: 0 auto;
  border-bottom: 1rpx solid #fff !important;
}

.li .icon-xiala, .icon-shangjiantou {
  color: #999;
  font-size: 28rpx;
}

.gray {
  color: #8e8e8e;
}

.red {
  color: #fe2e2e;
}

.create-team {
  background-color: rgb(105, 169, 230);
  color: white;
  text-align: center;
  border-radius: 1em;
  margin: 0 auto;
  width: 300rpx;
}

.content {
  width: 100%;
}

.content {
  width: 100%;
  display: inline-flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
  text-align: center;
  margin-top: 10rpx;
}
.content text {
  width: 260rpx;
}
.bg-g {
  background: #bfebbd;
}