<view class='main-box'>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class='input-box'>
      <text>姓名：{{post.name}}</text>
    </view>
    <view class='input-box'>
      <text>电话：{{post.tel_no}}</text>
    </view>
    <view class='input-box'>
      <text>性别：</text>
      <radio-group name="sex" class="choose-sex">
        <label>
          <radio value="1" checked="{{post.sex==1}}" />男</label>
        <label>
          <radio value="0" checked="{{post.sex==0}}" />女</label>
      </radio-group>
    </view>
    <view class='input-box'>
      <text>是否透漏录入人信息：</text>
      <radio-group name="disclose">
        <label>
          <radio value="1" checked="{{post.disclose==1}}" />是</label>
        <label>
          <radio value="0" checked="{{post.disclose==0}}" />否</label>
      </radio-group>
    </view>
    <view class='input-box'>
      <text>年龄：{{post.age}}</text>
    </view>
    <view class='input-box'>
      <text>民族：{{post.nation}}</text>
    </view>
    <view class='input-box'>
      <text>工作地址：{{post.work_address}}</text>
    </view>
    <view class='input-box'>
      <text>备注：</text>
      <textarea type="text" class='input-comments' placeholder-class="text-areaStyle" name="comments" placeholder="请输入1000字以内" value='{{post.comments}}' maxlength="1200" />
    </view>
    <view class="btn-area">
      <button formType="submit" bindtap='goSP' class='btn'>提 交</button>
      <button formType="reset" class='btn'>重 置</button>
    </view>
  </form>
</view>