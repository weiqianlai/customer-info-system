<!--pages/regist/regist.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title"></view>
  </view>
  <!--页头-->
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="page__bd page__bd_spacing">
      <view class="userRegist">创建团队</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入您的姓名" type="text" name="captain_name"  />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">号码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入您的手机号" type="number" name="captain_phone"  />
          </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">团队简介</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="请输入团队简介" name="group_info"  />
          </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">团队名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text"  name="group_name" placeholder="请输入团队名" />
          </view>
        </view>
      </view>
      <button class="weui-btn btn1" type="primary" formType="submit">注册团队</button>
    </view>
  </form>

</view>