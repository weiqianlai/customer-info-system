<view wx:if="{{post}}" class='container'>
    <view class='title-box'>
      <view class='my-team-word'>我的团队</view>
    </view>
  <view class='label'>
    <text>姓名</text>
    <text>性别</text>
    <text>电话</text>
    <text>操作</text>
  </view>
  <block wx:for="{{post}}" wx:key="{{item}}">
    <view class='content bg-g' wx:if="{{index % 2 == 0}}" data-id="{{index}}" bindtap='seePlayer'>
      <text>{{item.user_name}}</text>
      <text>{{item.user_sex}}</text>
      <text>{{item.phone_no}}</text>
      <button class='del' data-id='{{item.id}}' bindtap='onDel'>删除</button>
    </view>
    <view class='content' wx:else data-id="{{index}}" bindtap='seePlayer'>
      <text>{{item.user_name}}</text>
      <text>{{item.user_sex}}</text>
      <text>{{item.phone_no}}</text>
      <button class='del' data-id='{{item.id}}' bindtap='onDel'>删除</button>
    </view>
  </block>
</view>
<view wx:else="{{post}}" class='none'>
  <text>暂时没有团队信息！</text>
</view>
<view class='add'>
    <button  bindtap='goAddPlayer' class="weui-btn" type="default" size='mini'>添加队员</button>
</view>