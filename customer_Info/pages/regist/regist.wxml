<!--pages/regist/regist.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title"></view>
  </view>
  <!--页头-->
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="page__bd page__bd_spacing">
      <view class="userRegist">注册</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入您的姓名" type="text" name="user_name" bindinput='getUserName' />
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-label sex_choose">性别</view>
           <view class="weui-cell__bd">
          <radio-group name="user_sex" bindinput='getUserSex'>
            <label>
              <radio value="0"  checked/>男</label>
            <label>
              <radio value="1" />女</label>
          </radio-group>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">号码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入您的手机号" type="text" name="phone_no" bindinput='getPhoneNo' />
          </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">登录密码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="password" placeholder="请输入至少六位密码" name="user_password" bindinput='getUserPassword' />
          </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">确认密码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="password" bindinput='getEnsurePassword' name="ensurePassword" placeholder="请输入确认密码" />
          </view>
        </view>
      </view>
      <button class="weui-btn btn1" type="primary" formType="submit">注册</button>
      <button class="weui-btn" type="primary" bindtap='goLogin'>已有账号，直接登录</button>
    </view>
  </form>

  <view class="page__bd page__bd_spacing">
    <view class="weui-footer weui-footer_fixed-bottom">
      <view class="weui-footer__links">
        <navigator url="" class="weui-footer__link">首页</navigator>
      </view>
      <view class="weui-footer__text">Copyright © 2018-2018 WQL</view>
    </view>
  </view>
</view>